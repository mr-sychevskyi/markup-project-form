// BUTTONS__TYPES
.btn
  display inline-flex
  justify-content center
  align-items center

  text-decoration none
  cursor pointer
  transition all .4s

.btn-start
  padding 15px 70px

  font-size 23px
  font-weight 700
  text-transform uppercase

  border-radius 15px
  background-color #fc5095

.btn-continue
  padding 18px 24px

  font-weight 700
  text-transform uppercase

  border-radius 15px
  background-color #fcc150

.btn-submit
  padding 18px 24px

  color #fff
  font-size 15px
  font-weight 700
  text-transform uppercase
  letter-spacing 0.36px

  border-radius 20px
  border 1px solid #1da7c0
  background-color #1da7c0

.btn-submit:disabled
  color #aaa9a9
  background-color #fff
// END --> BUTTONS__TYPES


// BUTTONS__HOVER
.btn-start:hover
  background-color darken(#fc5095, 40%)

.btn-continue:hover
  background-color darken(#fcc150, 40%)

.btn-submit:not(:disabled):hover
  background-color darken(#1da7c0, 40%)

.btn-submit:disabled:hover
  cursor not-allowed
// END --> BUTTONS__HOVER